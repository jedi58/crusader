{% extends 'base.html.twig' %}

{% block title %}Hello CardEditController!{% endblock %}

{% block body %}
<form method="post" enctype="multipart/form-data">
    <div class="container">
        <div class="row">
            <div class="col-sm">
                <div class="row">
                    Image goes here
                </div>
                <div class="row">
                    <div class="card-group">
                        <div class="card text-center">
                            <div class="card-header">Power Rating</div>
                            <div class="card-body">
                                <p class="card-text">{{ card.powerRating|default(0) }}</p>
                            </div>
                        </div>
                        <div class="card text-center">
                            <div class="card-header">Experience Points</div>
                            <div class="card-body">
                                <p class="card-text">{{ card.exp|default(0) }}</p>
                            </div>
                        </div>
                        <div class="card text-center">
                            <div class="card-header">Crusade Points</div>
                            <div class="card-body">
                                <p class="card-text">{{ card.crusadePoints|default(0) }}</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <p class="form-group">
                        <label for="">Other Upgrades and Selectable Abilities</label>
                        <textarea class="form-control">{{ card.otherUpgrades }}</textarea>
                    </p>
                </div>
            </div>
            <div class="col-sm">
                <p class="form-group">
                    <label for="">Unit Name</label>
                    <input type="text" class="form-control" value="{{ card.name }}" />
                </p>
                <p class="form-group">
                    <label for="">Battlefield Role</label>
                    <input type="text" class="form-control" value="{{ card.role.name }}" />
                </p>
                <p class="form-group">
                    <label for="">Crusade Faction</label>
                    <input type="text" class="form-control" readonly value="{{ card.parentForce.faction.name }}" />
                </p>
                <p class="form-group">
                    <label for="">Selectable Keywords</label>
                    <input type="text" class="form-control" value="{{ card.keywords }}" />
                </p>
                <p class="form-group">
                    <label for="">Unit Type</label>
                    <input type="text" class="form-control" readonly value="{{ card.type }}" />
                </p>
                <p class="form-group">
                    <label for="">Equipment</label>
                    <input type="text" class="form-control" value="{{ card.equipment }}" />
                </p>
                <p class="form-group">
                    <label for="">Psychic Powers</label>
                    <input type="text" class="form-control" value="{{ card.psychic }}" />
                </p>
                <p class="form-group">
                    <label for="">Warlord Traits</label>
                    <input type="text" class="form-control" value="{{ card.warlordTraits }}" />
                </p>
                <p class="form-group">
                    <label for="">Relics</label>
                    <input type="text" class="form-control" value="{{ card.relics }}" />
                </p>
            </div>
        </div>

        <div class="row">
            <h3>Combat Tallies</h3>
        </div>
        <div class="row">
            <div class="card-group">
                <div class="card text-center">
                    <div class="card-header">Battles Played</div>
                    <div class="card-body">
                        <p class="card-text">{{ card.battlesPlayed|default(0) }}</p>
                    </div>
                </div>
                <div class="card text-center">
                    <div class="card-header">Battles Survived</div>
                    <div class="card-body">
                        <p class="card-text">{{ card.battlesSurvived|default(0) }}</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <table class="table table-striped table-hover table-responsive">
                <thead class="thead-dark">
                <tr>
                    <th scope="col"></th>
                    <th scope="col">… during this battle</th>
                    <th scope="col">… in total</th>
                </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">Enemy units destroyed…</th>
                        <td>{{ card.killsBattleCount|default(0) }}</td>
                        <td>{{ card.killsTotalCount|default(0) }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Enemy units destroyed with Psychic Powers…</th>
                        <td>{{ card.killsBattlePsychic|default(0) }}</td>
                        <td>{{ card.killsTotalPsychic|default(0) }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Enemy units destroyed with Ranged Weapons…</th>
                        <td>{{ card.killsBattleRanged|default(0) }}</td>
                        <td>{{ card.killsTotalRanged|default(0) }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Enemy units destroyed with Melee Weapons…</th>
                        <td>{{ card.killsBattleMelee|default(0) }}</td>
                        <td>{{ card.killsTotalMelee|default(0) }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Agenda 1 tally…</th>
                        <td>{{ card.agenda1|default(0) }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Agenda 2 tally…</th>
                        <td>{{ card.agenda2|default(0) }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Agenda 3 tally…</th>
                        <td>{{ card.agenda3|default(0) }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="row">
            <h3>Rank</h3>
            {{ card.rank }}
            Blooded
            Battle Hardened
            Heroic
            Legendary
        </div>
        <!-- div class="row" -->
            <p class="form-group">
                <label for="">Battle Honours</label>
                <input type="text" class="form-control" value="{{ card.honours|join(', ') }}" />
            </p>
            <p class="form-group">
                <label for="">Battle Scars</label>
                <input type="text" class="form-control" value="{{ card.scars|join(', ') }}" />
            </p>
        <!-- /div -->
    </div>
</form>
{% endblock %}
